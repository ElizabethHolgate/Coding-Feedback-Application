<% layout('layouts/boilerplate')%>
<div class="row mb-3">
    <h1 class="text-center">Edit Module</h1>
    <div class="col-6 offset-3"></div>
        <form action="/modules/<%=module._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="code">Code</label>
                <input class="form-control" type="text" id="code" name="module[code]" value="<%=module.code %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="module[title]" value="<%=module.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="module[description]" value="<%=module.description %>">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Module</button>
            </div>
            
        </form>
        
        <div class="row">
            <div class="col mb-3">
                <h2>Admins:</h2>
                <h3>Current admins:</h3>
                <ul>
                    <% for(let admin of module.admins) { %>
                        <li><%= admin.username %></li>
                    <% } %>
                </ul>
                
                <form action="/modules/<%=module._id%>/edit/admin?_method=PUT" method="POST" novalidate class="validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="description">Add admin:</label>
                        <input class="form-control" type="text" id="admin" name="admin" placeholder="admin's username">
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add Admin</button>
                    </div>
                </form>
                <form action="/modules/<%=module._id%>/edit/admin?_method=DELETE" method="POST">
                    <select class="form-control mb-3" name="adminDelete">
                        <% for(let admin of module.admins) { %>
                            <option value="<%= admin._id %>"><%= admin.username %></option>
                        <% } %>
                      </select>
                    <button class="btn btn-sm btn-danger">Delete Admin</button>
                </form>
            </div>
            <div class="col">
                <h2>Students:</h2>
            <h3>Current students:</h3>
            <ul>
                <% for(let student of module.students) { %>
                    <li><%= student.username %></li>
                <% } %>
            </ul>
            <div class="mb-3">
                <form action="/modules/<%=module._id%>/edit/student?_method=PUT" method="POST" novalidate class="validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="description">Add student:</label>
                        <input class="form-control" type="text" id="student" name="student" placeholder="student's username">
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add Student</button>
                    </div>
                </form>
                <form action="/modules/<%=module._id%>/edit/student?_method=DELETE" method="POST">
                    <select class="form-control mb-3" name="studentDelete">
                        <% for(let student of module.students) { %>
                            <option value="<%= student._id %>"><%= student.username %></option>
                        <% } %>
                      </select>
                    <button class="btn btn-sm btn-danger">Delete Student</button>
                </form>
            </div>
            
            </div>
        </div>
        
        
        
    <a class="btn btn-primary" href="/modules/<%= module._id%>">Back To Module</a>
</div>
</div>
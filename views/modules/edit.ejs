<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Module</h1>
    <div class="col-6 offset-3"></div>
        <form action="/modules/<%=module._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="code">Code</label>
                <input class="form-control" type="text" id="code" name="module[code]" value="<%=module.code %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="module[title]" value="<%=module.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="module[description]" value="<%=module.description %>">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Module</button>
            </div>
            
        </form>
        
    <a class="btn btn-primary" href="/modules/<%= module._id%>">Back To Module</a>
</div>
</div>
<% layout('layouts/boilerplate')%>
<div class="d-flex justify-content-center">
    <div class="card w-75 text-left m-2 mb-4">
        <h5 class="card-header text-center">Edit Module</h5>
        <div class="card-body align-items-center">
            <form action="/modules/<%=module._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="code">Code</label>
                    <input class="form-control" type="text" id="code" name="module[code]" value="<%=module.code %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="module[title]" value="<%=module.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="module[description]" id="description" cols="30" rows="3" required><%=module.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Module</button>
                    
                </div>
                
            </form>
        </div>
        <a class="btn btn-primary m-3" href="/modules/<%= module._id%>">Back To Module</a>
    </div>
    
    
</div>
<div class="d-flex justify-content-center">
    <div class="card w-50 text-left m-2 mb-4">
        <h5 class="card-header text-center">Admins</h5>
        <div class="card-body align-items-center">
            <h6 class="card-subheader">Current admins:</h6>
            <ul>
                <% for(let admin of module.admins) { %>
                    <li><%= admin.username %></li>
                <% } %>
            </ul>
            <form action="/modules/<%=module._id%>/edit/admin?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="admin">Add admin:</label>
                    <input class="form-control" type="text" id="admin" name="admin" placeholder="admin's username" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-sm btn-success">Add Admin</button>
                </div>
            </form>
            <form action="/modules/<%=module._id%>/edit/admin?_method=DELETE" method="POST">
                <label class="form-label" for="admin">Delete admin:</label>
                <select class="form-control mb-3" name="adminDelete">
                    <% for(let admin of module.admins) { %>
                        <option value="<%= admin._id %>"><%= admin.username %></option>
                    <% } %>
                  </select>
                <button class="btn btn-sm btn-danger">Delete Admin</button>
            </form>
        </div>
    </div>
    <div class="card w-50 text-left m-2 mb-4">
        <h5 class="card-header text-center">Students</h5>
        <div class="card-body align-items-center">
            <h6 class="card-subheader">Current students:</h6>
            <ul>
                <% for(let student of module.students) { %>
                    <li><%= student.username %></li>
                <% } %>
            </ul>
            <form action="/modules/<%=module._id%>/edit/student?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="description">Add student:</label>
                    <input class="form-control" type="text" id="student" name="student" placeholder="student's username" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-sm btn-success">Add Student</button>
                </div>
            </form>
            <form action="/modules/<%=module._id%>/edit/student?_method=DELETE" method="POST">
                <label class="form-label" for="admin">Delete student:</label>
                <select class="form-control mb-3" name="studentDelete">
                    <% for(let student of module.students) { %>
                        <option value="<%= student._id %>"><%= student.username %></option>
                    <% } %>
                  </select>
                <button class="btn btn-sm btn-danger">Delete Student</button>
            </form>
        </div>
    </div>
</div>

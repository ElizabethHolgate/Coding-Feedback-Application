<% layout('layouts/boilerplate')%>

    <h1>All Modules</h1>
    <div class="row">
        <div>
        <% if(currentUser) { %>
            <% if(currentUser.lecturer == true){ %>
                <div class="ml-3">
                    <a class="btn btn-info" href="/modules/new">Add New Module</a>
                </div>
            <% } %>
        <% } %>
        
            <br>
                <div class="row m-2">
                    
                
                <% for (let module of modules){%>
                    <div class="card m-1" style="width: 18rem;">
                        <div class="card-body">
                          <h5 class="card-title"><%= module.code %>: <%= module.title %></h5>
                          <p class="card-text"><%= module.description %></p>
                          <a href="/modules/<%= module._id %>" class="btn btn-primary"><%= module.code %></a>
                        </div>
                      </div>
                    <!-- <a href="/modules/<%= module._id %>"><li> <%= module.code %>: <%= module.title %></li></a> -->
                <% } %>
            </div>
        </div>
    </div>
    
    

<% layout('layouts/boilerplate')%>
<div class="d-flex justify-content-center">
    <div class="card w-50 text-center">
        <h5 class="card-header">Delete Account</h5>
        <div class="card-body align-items-center">
            <p>Are you sure you want to continue?</p>
            <p>This will delete your account all data associated with your account and cannot by undone!</p>
            <p>Please type your username and password to confirm:</p>
            <hr/>
            <form action="/profile/delete?_method=DELETE" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-danger">Delete Account</button>
            </form>
        </div>
    </div>
</div>
